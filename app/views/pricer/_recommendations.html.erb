<% if @recommendations.present? %>
    <div id="offers-collection" data-filters='<%= Recommendation.summary(@recommendations).to_json %>'>
        <%= render :partial => 'recommendation', :collection => @recommendations %>
    </div>
<% else %>
    <div id="offers-collection">Таких рейсов нет, попробуйте другие даты.</div>
<% end %>
