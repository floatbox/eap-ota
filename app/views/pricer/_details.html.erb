<div class="os-details" data-flights="<%= segment_id(segment) %>">
<h4 class="osd-title">
    <strong class="osdt-main"><%= segment_rt ? t('offer.details.segment_rt') : segment_title(segment) %></strong><% if segment_cabins.length == 1 %> <span class="osdt-hl"><%= human_cabin_ins(segment_cabins.first) %></span><% end %> <%= date_with_dow segment.flights.first.departure_date %><% if segment.layovers? %>, <%= with_layovers(segment) %><% end %>
</h4>
<% segment_cabins = [] if segment_cabins.length < 2 %>
<% segment_carrier = primary_carrier(segment) %>
<% segment.flights.each_with_index do |flight, fcounter| %>
<div class="osd-flight wrap">
    <div class="osd-dpt">
        <h5 class="osd-time"><%= fmt_time flight.departure_time %></h5>
        <h6 class="osd-action"><%= t 'offer.details.dpt' %> <%= raw nbsp(flight.departure.city.case_from) %></h6>
        <dl class="osd-features">
            <dt><%= t 'offer.details.airport' %></dt>
            <dd><%= full_airport_and_term(flight.departure, flight.departure_term) %></dd>
            <dt><%= t 'offer.details.carrier' %></dt>
            <dd class="osd-carrier"><img class="osdc-icon" src="<%= flight.operating_carrier.icon_url %>" alt=""><% if flight.operating_carrier_name != segment_carrier.name %><span class="odc-hl"><%= flight.operating_carrier_name %></span><% else %><%= flight.operating_carrier_name %><% end %></dd>
            <dt><%= t 'offer.details.flight' %></dt>
            <dd><%= flight.marketing_carrier_iata %>&nbsp;<%= flight.flight_number %> <%= flight.departure.city.name %> — <%= flight.arrival.city.name %></dd>
            <dt><%= t 'offer.details.aircraft' %></dt>
            <dd><%= flight.equipment_type_name %></dd>
            <dt><%= t 'offer.details.duration' %></dt>
            <dd><%= human_duration(flight.duration) %><% if segment_cabins[fcounter] %> <span class="osdn-hl"><%= human_cabin_nom(segment_cabins[fcounter]) %></span><% end %></dd>
            <%# FIXME выключаю, пока что это в админской инфе %>
            <% if false && admin_user%>
                <p style="text-align:center"><a href='<%= show_seat_map_url(flight.flight_code) %>' target="_blank">карта мест</a></p>
            <% end %>
         </dl>
    </div>
    <div class="osd-arv">
        <h5 class="osd-time"><%= fmt_time flight.arrival_time %></h5>
        <h6 class="osd-action"><%= t 'offer.details.arv' %> <%= nbsp(flight.arrival.city.case_to) %><%= raw " #{ nbsp(human_date(flight.arrival_date)) }" if fcounter == segment.flights.length - 1 && flight.arrival_date != segment.flights[0].departure_date %></h6>
        <% layover = segment.layover_durations[fcounter] %>
        <dl class="osd-features">
            <dt><%= t 'offer.details.airport' %></dt>
            <dd><%= full_airport_and_term(flight.arrival, flight.arrival_term) %></dd>
            <% if layover %>
                <dt><%= t 'offer.details.between_flights' %></dt>
                <dd><% if layover > 479 %><span class="odc-hl"><%= human_duration(layover) %></span><% else %><%= human_duration(layover) %><% end %></dd>
            <% end %>            
        </dl>
        <ul class="osd-notice">
            <% unless flight.technical_stop_count.zero? %>
                <li class="osdn-item"><span class="osdn-hl"><%= technical_stops(flight) %></span></li>
            <% end %>
            <% if layover %>
                <% next_flight = segment.flights[fcounter + 1] %>
                <% if next_flight.departure_name != flight.arrival_name %>
                    <li class="osdn-item"><span class="osdn-hl"><%= t 'offer.details.different_airports' %></span></li>
                <% elsif next_flight.departure_term != flight.arrival_term %>
                    <li class="osdn-item"><span class="osdn-hl"><%= t 'offer.details.different_terminals' %></span></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>
<% end %>
</div>
