<div class="so-content wrap">
    <div class="so-persons" data-name="adults">
        <h6 class="so-title"><%= t('search.options.adults.title') %> <em><%= t('search.options.adults.hint') %></em></h6>
        <ul class="so-values">
            <li>1</li>
            <li>2</li>
