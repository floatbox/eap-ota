<div id="search">

<!-- Locations -->
<div id="search-locations">
<div class="sl-content">
    <div id="search-mode">
        <div class="sm-control">Туда и обратно</div>
        <ul class="sm-values">
            <li data-mode="rt">Туда и обратно</li>
            <li data-mode="ow">Только туда</li>
            <li data-mode="mw">Сложный маршрут</li>    
        </ul>
    </div>
    <div class="sl-segment sl-segment1" data-segment="1">
        <div class="sl-field dpt">
            <label for="sl-segment1-dpt">Откуда?</label>
            <input type="text" id="sl-segment1-dpt" value="Москва">
        </div>
        <div class="sl-icon sl-return"></div>
        <div class="sl-field arv">
            <label for="sl-segment1-arv">Куда?</label>
            <input type="text" id="sl-segment1-arv">
        </div>
    </div>
    <div class="sl-segment sl-segment2 latent" data-segment="2">
        <div class="sl-field dpt">
            <label for="s2-segment1-dpt">Откуда?</label>
            <input type="text" id="s2-segment1-dpt">
        </div>
        <div class="sl-icon"></div>
        <div class="sl-field arv">
            <label for="sl-segment2-arv">Куда?</label>
            <input type="text" id="sl-segment2-arv">
        </div>
        <div class="sl-toggle">
            <span class="sl-add">Добавить перелёт</span>
            <span class="sl-remove latent">Убрать перелёт</span>
        </div>
    </div>
    <div class="sl-segment sl-segment3 latent" data-segment="3">
        <div class="sl-field dpt">
            <label for="sl-segment3-dpt">Откуда?</label>
            <input type="text" id="sl-segment3-dpt">
        </div>
        <div class="sl-icon"></div>
        <div class="sl-field arv">
            <label for="sl-segment3-arv">Куда?</label>
            <input type="text" id="sl-segment3-arv">
        </div>
        <div class="sl-toggle">
            <span class="sl-remove latent">Убрать перелёт</span>
        </div>
    </div>
</div>
</div>

<div id="search-wrapper">

	<!-- Map -->
	<div id="search-map">
	    <div class="smap-control">Развернуть карту</div>
	    <div class="smap-content"></div>
	</div>
	
	<!-- Dates -->
	<div id="search-dates" data-now="<%= Time.now.to_formatted_s(:rfc822) %>">
	<div class="sd-timeline">
	    <div class="sdt-content">
	        <div class="sdt-hover sdt-fhover"></div>
	        <div class="sdt-hover sdt-shover"></div>
	        <div class="sdt-tab sdt-ftab"></div>
	        <div class="sdt-tab sdt-stab"></div>        
	        <div class="sdt-selected"></div>
	    </div>
	</div>
	<div class="sd-calendar">
	    <div class="sdc-content">
	    <div class="sdc-slider">
	        <div class="sdc-month">
	        <ul class="sdc-week">
	            <li class="sdcw-day"><span class="sdcw-title">ПН</li>
	            <li class="sdcw-day"><span class="sdcw-title">ВТ</li>
	            <li class="sdcw-day"><span class="sdcw-title">СР</li>
	            <li class="sdcw-day"><span class="sdcw-title">ЧТ</li>
	            <li class="sdcw-day"><span class="sdcw-title">ПТ</li>
	            <li class="sdcw-day"><span class="sdcw-title dayoff">СБ</li>
	            <li class="sdcw-day"><span class="sdcw-title dayoff">ВС</li>
	        </ul>
	        </div>
	        <div class="sdc-reset"></div>
	    </div>
	    <div class="sdc-overlay">
	        <div class="sdc-splitter"></div>
	    </div>
	    </div>
	</div>
	</div>

</div>

<!-- Options -->
<div id="search-options">
<div class="so-content wrap">
    <div class="so-persons" data-name="adults">
        <h6 class="so-title">Взрослых</h6>
        <ul class="so-values">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
            <li>5</li>
            <li>6</li>
            <li>7</li>
            <li>8</li>
        </ul>
    </div>
    <div class="so-persons" data-name="children">
        <h6 class="so-title">Детей <em>от 2 до 12 лет</em></h6>
        <ul class="so-values">
            <li>0</li>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
            <li>5</li>
            <li>6</li>
        </ul>
    </div>
    <div class="so-persons" data-name="infants">
        <h6 class="so-title">Младенцев <em>до 2 лет</em></h6>
        <ul class="so-values">
            <li>0</li>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
        </ul>
    </div>    
    <div class="so-cabin">
        <h6 class="so-title">Класс обслуживания</h6>
        <ul class="so-values">
            <li data-value="Y">эконом</li>
            <li data-value="C">бизнес</li>
            <li data-value="F">первый</li>
        </ul>
    </div>
</div>
</div>

<%= render 'debug' %>

</div>
