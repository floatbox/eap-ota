<script type="text/javascript">
(function(){
    var popup = $('#pht-tickets .pht-popup').click(function(event) {
        event.stopPropagation();
    });
    var hide = function(event) {
        if (event.type == 'click' || event.which == 27) {
            $('body').off('click keydown', hide);
            popup.hide();
        }
    };
    popup.find('.phtp-close').click(function(event) {
        hide(event);
    });
    $('#pht-tickets .phtt-link').click(function(event) {
        event.stopPropagation();
        event.preventDefault();
        if (popup.is(':visible')) {
            hide(event);
        } else {
            popup.show();
            setTimeout(function() {
                $('body').on('click keydown', hide);
            }, 10);
        }
    });
})();
</script>
