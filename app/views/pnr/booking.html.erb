<table cellspacing="0" cellpadding="0" width="916" style="font-size: 14px; line-height: 17px; font-family: Arial, sans-serif; color: #333333;">
<col width="530">
<col width="20">
<col width="366">
<tbody>
<tr valign="top">
    <td width="530" rowspan="2">
        <div style="font-weight: bold; font-size: 18px; line-height: 21px;"><% unless @lang %>Информация для оплаты<br><% end %>Information for payment</div>
        <div style="font-size: 10px; line-height: 10px;"><br></div>
        <table cellspacing="0" cellpadding="0" style="font-size: 13px; line-height: 18px;">
        <tbody valign="top">
        <col width="320">
        <col width="20">
        <col width="190">
        <%= render :partial => 'pnr/main_prices' %>
        </tbody>
        </table>
    </td>
    <td width="20" rowspan="2"><br></td>
    <td width="366">
        <div style="font-weight: bold; font-size: 18px; line-height: 21px;"><% unless @lang %>Данные покупателя<br><% end %>Customer Details</div>
        <div style="font-size: 10px; line-height: 10px;"><br></div>
        <% if @pnr.email || @pnr.phone %>
        <div style="font-size: 13px; line-height: 18px;">
            <%= [@pnr.email, @pnr.phone].compact.join(', ') %>
        </div>
        <div style="font-size: 10px; line-height: 10px;"><br></div>
        <% end %>
    </td>
</tr>
<tr valign="bottom">
    <td style="font-weight: bold; font-size: 16px; line-height: 20px; color: #F90A6F;">
        <% unless @lang %>Спасибо за бронирование на <a href="https://www.eviterra.com/" style="text-decoration: none; color: #F90A6F;">eviterra.com</a><br><% end %>
        Thank you for booking with <a href="https://www.eviterra.com/" style="text-decoration: none; color: #F90A6F;">eviterra.com</a>
    </td>
</tr>
</tbody>
