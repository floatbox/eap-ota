<% @order ||= @pnr.order_real_or_dummy %>
<table cellspacing="0" cellpadding="0" width="740" style="width: 740px; color: #000; font-size: 13px; line-height: 1.25; font-family: Arial, sans-serif; letter-spacing: -0.02em;">
<col width="240">
<col width="240">
<col width="15">
<col width="*">
<col width="15">
<col width="60">
<tbody valign="top">
<tr>
    <td class="pad_null"><img src="https://eviterra.com/img/booking/eviterra.png" alt="eviterra" width="210" height="30"></td>
    <td class="pad_null" colspan="2">
    <% if @order.paid? %>
        <font size="3" family="Arial" style="font-size: 15px;"><strong>Электронный билет<br>E-ticket</strong></font>
    <% else %>
        <font size="3" family="Arial" style="font-size: 15px;"><strong>Бронирование<br>Booking</strong></font>
    <% end %>
    </td>
    <td class="pad_null" colspan="3">
        <div><font family="Arial" size="2" style="font-size: 13px; line-height: 16px;"><strong>Номер брони</strong></font></div>
        <div><font size="5" family="Arial" color="#ED1192" style="font-size: 30px; line-height: 30px; color: #ED1192;"><strong><%= @pnr.number %></strong></font></div>
    </td>
</tr>
</tbody>
<% if !@order.paid? && @order.last_pay_time.present? %>
<tbody valign="top">
<tr>
    <td colspan="6" class="pad_null">&nbsp;<br></td>
</tr>
<tr>
    <td class="pad_null" colspan="6">
        <font size="3" family="Arial" style="font-size: 15px;"><strong>Действительно до<br>Valid until</strong></font><br>
        <font size="3" family="Arial" color="#ED1192" style="font-size: 18px; color: #ED1192;"><strong><%= @order.last_pay_time.strftime('%H:%M %d.%m.%Y') %></strong></font><br>
        <br>
    </td>
</tr>
</tbody>
<% end %>
<tbody valign="top">
<tr>
    <td colspan="6" class="pad_null">&nbsp;<br></td>
</tr>
<tr valign="bottom">
    <td class="pad_null">
        <font family="Arial" size="3" style="font-size: 18px;"><strong>Сведения о пассажирах<br>Traveler Information</strong></font>
    </td>
    <td class="pad_null" colspan="2"><br></td>
    <td class="pad_null" colspan="3">
        <font family="Arial" size="3" style="font-size: 15px;"><strong>Сведения об агенте<br>Agent Information</strong></font>
    </td>
</tr>
<tr>
    <td colspan="6" class="pad_null"><font size="2" style="font-size: 8px;">&nbsp;<br></font></td>
</tr>
<tr>
    <td class="pad_null">
        <font family="Arial" size="2">
        <% for p in @pnr.passengers %>
            <strong style="font-weight: bold;"><%= p.last_name %> <%= p.first_name %> &nbsp;</strong><br><%= p.passport %><br>
        <% end %>
        </font>
    </td>
    <td class="pad_null" colspan="2">
    <% if @pnr.passengers.any?(&:ticket) %>
        <font family="Arial" size="2">
        <% for p in @pnr.passengers %>
            <%= p.ticket %><br><br>
        <% end %>
        </font>
    <% end %>
    </td>
    <td class="pad_null">
        <font family="Arial" size="2">Eviterra Travel<br>+7 (495) 660-35-20<br>
        <a href="http://www.eviterra.com/" target="_blank" style="color: #ed1192;"><font color="#ed1192">www.eviterra.com</font></a><br>
        <a href="mailto:ticket@eviterra.com" target="_blank" style="color: #ed1192;"><font color="#ed1192">ticket@eviterra.com</font></a>
        </font>
    </td>
</tr>
</tbody>
<tbody valign="top">
<tr>
    <td colspan="6" class="pad_null"><font size="3">&nbsp;<br></font></td>
</tr>
<tr valign="bottom">
    <td class="pad_null">
        <font family="Arial" size="3" style="font-size: 18px;"><strong>Сведения о маршруте<br>Itinerary Information</strong></font>
    </td>
    <td class="pad_null" colspan="2">
        <font family="Arial" size="3" style="font-size: 15px;"><strong>Отправление<br>Departure</strong></font>
    </td>
    <td class="pad_null" colspan="2">
        <font family="Arial" size="3" style="font-size: 15px;"><strong>Прибытие<br>Arrival</strong></font>
    </td>
    <td class="pad_null">
        <font family="Arial" size="3" style="font-size: 15px;"><strong>Тариф<br>Fare</strong></font>
    </td>
</tr>
<tr>
    <td colspan="6" class="pad_null"><font size="2">&nbsp;<br></font></td>
</tr>
<% for flight, booking_class in @pnr.flights.zip(@pnr.booking_classes) %>
<tr>
    <td class="pad_null" align="right" valign="top" style="text-align: right; vertical-align: top;">
        <font size="2" family="Arial"><%= full_human_date( flight.departure_date ) %></font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </td>
    <td class="pad_null" valign="top" style="vertical-align: top;">
        <font size="2" family="Arial">
        <font color="#ed1192"><strong style="color: #ed1192;"><%= fmt_time(flight.departure_time) %></strong></font><br>
        <%= flight.departure.city.name %><br>
        <strong style="font-weight: bold;"><%= flight.departure_name %><% if flight.departure_term %>, терминал&nbsp;<%= flight.departure_term %><% end %> — <%= flight.departure_iata %><% if flight.departure_term %>(<%= flight.departure_term %>)<% end %></strong><br>
        <% if flight.operating_carrier_name %><%= flight.operating_carrier_name %><br><% end %>
        <%= flight.marketing_carrier_iata %>&nbsp;<%= flight.flight_number %> / <%= flight.equipment_type_name %><br>
        <% if flight.warning %><%= flight.warning %><br><% end %>
        </font>
        <br>
    </td>
    <td class="pad_null">&nbsp;&nbsp;<br></td>
    <td class="pad_null" valign="top" style="vertical-align: top;">
        <font size="2" family="Arial">
        <strong><font color="#ed1192"><%= fmt_time( flight.arrival_time ) %></font><% if flight.arrival_date != flight.departure_date %> <%= fmt_date(flight.arrival_date) %><% end %></strong><br>
        <%= flight.arrival.city.name %><br>
        <%= flight.arrival_name %><% if flight.arrival_term %>, терминал&nbsp;<%= flight.arrival_term %><% end %> — <%= flight.arrival_iata %><% if flight.arrival_term %>(<%= flight.arrival_term %>)<% end %><br>
        </font>
    </td>
    <td class="pad_null">&nbsp;&nbsp;<br></td>
    <td class="pad_null">
        <font size="2" family="Arial"><%= booking_class %> (HK)</font>
    </td>
</tr>
<% end %>
<tr>
    <td colspan="6" class="pad_null"><font size="2">&nbsp;<br></font></td>
</tr>
</tbody>

<% if @order.paid? %>
    <tbody valign="top">
    <tr>
        <td colspan="6" class="pad_null">
            <font size="2" family="Arial"><strong>Обратите внимание</strong>, что время отправления и прибытия указано местное. Регистрация на внутренние рейсы заканчивается как правило за 40 минут до отправления, на международные рейсы — за полтора часа до отправления.</font><br>
            <font size="1" style="font-size: 6px;"><br></font>
            <font size="2" family="Arial"><strong>Attention!</strong> Local departure and arrival time is indicated.</font>
        </td>
    </tr>
    <tr>
        <td colspan="6" class="pad_null"><font size="3">&nbsp;<br></font></td>
    </tr>
    </tbody>
    <tbody valign="top">
    <tr>
        <td class="pad_null">
            <font family="Arial" size="3" style="font-size: 18px;"><strong>Сведения об оплате<br>Payment Information</strong></font><br>
            <font size="1" style="line-height: 8px;"><br></font>
        </td>
        <td class="pad_null" colspan="5"><br></td>
    </tr>
    <tr>
        <td class="pad_null">
            <font family="Arial" size="2">
            Тариф / Fare<br>
            Налоги и сборы / Taxes<br>
            Итоговая стоимость / Total<br>
            Форма оплаты / Paid by<br>
            Дата оформления / Issue date
            </font>
        </td>
        <td class="pad_null" colspan="2">
            <font family="Arial" size="2">
            <%= @order.price_fare.ceil.to_i %> RUB<br>
            <%= @order.price_tax_and_markup_and_payment.ceil.to_i %> RUB<br>
            <%= @order.price_with_payment_commission.ceil.to_i %> RUB<br>
            Invoice<br>
            <%= @order.created_at.strftime('%d.%m.%y') %>
            </font>
        </td>
        <td class="pad_null" colspan="3">
            <font family="Arial" size="2">Адрес и телефон покупателя</font><br>
            <font family="Arial" size="1" style="font-size: 6px;"><br></font>
            <font family="Arial" size="2">
            <% if @pnr.email %>
                <a href="mailto:<%= @pnr.email %>" target="_blank" style="color: #ed1192;"><font color="#ed1192"><%= @pnr.email %></font></a><br>
            <% end %>
            <%= @pnr.phone %>
            </font>
        </td>
    </tr>
    </tbody>
<% else %>
    <tbody valign="top">
    <tr>
        <td class="pad_null">
            <font family="Arial" size="3" style="font-size: 18px;"><strong>Информация для оплаты<br>Information for payment</strong></font><br>
            <font size="1" style="line-height: 8px;"><br></font>
        </td>
        <td class="pad_null" colspan="5"><br></td>
    </tr>
    <tr>
        <td class="pad_null">
            <font family="Arial" size="2">
            Тариф / Fare<br>
            Налоги и сборы / Taxes<br>
            <% if @order.payment_type == 'delivery' %>
                Доставка / Delivery<br>
            <% end %>
            Итоговая стоимость / Total<br>
            </font>
        </td>
        <td class="pad_null" colspan="2">
            <font family="Arial" size="2">
            <%= @order.price_fare.ceil.to_i %> RUB<br>
            <%= @order.price_tax_and_markup_and_payment.ceil.to_i %> RUB<br>
            <% if @order.payment_type == 'delivery' %>
                350 RUB<br>
                <%= @order.price_with_payment_commission.ceil.to_i + 350 %> RUB<br>
            <% else %>
                <%= @order.price_with_payment_commission.ceil.to_i %> RUB<br>
            <% end %>
            </font>
        </td>
        <td class="pad_null" colspan="3">
            <font family="Arial" size="2">Адрес и телефон</font><br>
            <font family="Arial" size="1" style="font-size: 6px;"><br></font>
            <font family="Arial" size="2">
            <% if @pnr.email %>
                <a href="mailto:<%= @pnr.email %>" target="_blank" style="color: #ed1192;"><font color="#ed1192"><%= @pnr.email %></font></a><br>
            <% end %>
            <%= @pnr.phone %>
            </font>
        </td>
    </tr>
    </tbody>
<% end %>

<tbody valign="top">
<tr>
    <td class="pad_null" style="text-align: center; font-size: 24px; line-height: 1.25; letter-spacing: -0.02em;" colspan="6">
    <font size="5"><br></font>
    <center>
    <% if @order.paid? %>
        <font family="Arial" size="5"><strong>Спасибо за покупку на <a href="http://www.eviterra.com/" style="color: #ED1192; text-decoration: none;"><font color="#ED1192">eviterra.com</font></a>!</strong></font><br>
        <font family="Arial" size="5"><strong>Thank you for purchase at <a href="http://www.eviterra.com/" style="color: #ED1192; text-decoration: none;"><font color="#ED1192">eviterra.com</font></a>!</strong></font><br>
    <% else %>
        <font family="Arial" size="5"><strong>Спасибо за то, что забронировали на <a href="http://www.eviterra.com/" style="color: #ED1192; text-decoration: none;"><font color="#ED1192">eviterra.com</font></a>!</strong></font><br>
        <font family="Arial" size="5"><strong>Thank you for booking at <a href="http://www.eviterra.com/" style="color: #ED1192; text-decoration: none;"><font color="#ED1192">eviterra.com</font></a>!</strong></font><br>    
    <% end %>
    </center>
    </td>
</tbody>
</table>
